<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondaryTextColor</item>
        <item name="colorPrimaryDark">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/secondaryTextColor</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:showDividers">none</item>
        <item name="actionBarDivider">@android:color/transparent</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="WelcomeTextStyle">
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.OptionsButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="strokeColor">@color/secondaryTextColor</item>
        <item name="strokeWidth">@dimen/dp2</item>
        <item name="cornerRadius">@dimen/dp20</item>
    </style>

</resources>
