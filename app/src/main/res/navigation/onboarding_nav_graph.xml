<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_nav_graph"
    app:startDestination="@id/onBoardFragment">

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.chydee.lacasadepapel.welcome.OnBoardFragment"
        android:label="on_board_fragment"
        tools:layout="@layout/on_board_fragment">
        <action
            android:id="@+id/action_onBoardFragment_to_welcomeUserFragment"
            app:destination="@id/welcomeUserFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/onBoardFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeUserFragment"
        android:name="com.chydee.lacasadepapel.welcome.WelcomeUserFragment"
        android:label="welcome_user_fragment"
        tools:layout="@layout/welcome_user_fragment">
        <action android:id="@+id/action_welcomeUserFragment_to_onBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.chydee.lacasadepapel.game.GameFragment"
        android:label="GameFragment" />
    <fragment
        android:id="@+id/gameResult"
        android:name="com.chydee.lacasadepapel.game.GameResult"
        android:label="GameResult" />
</navigation>